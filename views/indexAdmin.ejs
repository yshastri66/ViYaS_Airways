                                      <th scope="col">Crew ID</th>
                                      <th scope="col">Name</th>
                                      <th scope="col">DOB</th>
                                      <th scope="col">Assigned F_ID</th>
                                      <th scope="col">Age</th>
                                      <th scope="col">Sex</th>
                                      <th scope="col">Salary</th>
                                      <th scope="col">Email</th>
                                      <th scope="col">Phone no</th>
                                      <th scope="col">Address</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <tr>
                                      <% for(rows of table2){ %>
                                      <th scope="row"><%= rows.CREW_ID %> </td>
                                      <td><%= rows.NAME %> </td>
                                      <td><%= rows.DOB %> </td>
                                      <td><%= rows.ASS_FLIGHT %> </td>
                                      <td><%= rows.AGE %> </td>
                                      <td><%= rows.SEX %> </td>
                                      <td>Rs.<%= rows.SALARY %></td>
                                      <td><%= rows.EMAIL %> </td>
                                      <td><%= rows.PH_NO %></td>
                                      <td><%= rows.ADDRESS %> </td>
                                    </tr>
                                  
                                    <% } %> 
                                    
                                  </tbody>
                                </table>

                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                              </div>
