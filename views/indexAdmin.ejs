                                <button type="submit" class="btn btn-primary">DELETE</button>
                              </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- MODAL ENDS -->  
                      <div style="margin-bottom: 88px;">
                        <button type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#exampleModal4">
